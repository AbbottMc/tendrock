{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "incremental": false,
    "declarationDir": "types/generated",
    "lib": [
      "ES6", "ES2021", "ES2022"
    ],
    "allowJs": true
  },
  "include": [
    "./"
  ],
  "exclude": [
    "./backup", "dist", "package.json", "tsconfig.json", "types"
  ]
}